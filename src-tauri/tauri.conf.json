{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Prompt Manager",
  "version": "1.0.0",
  "identifier": "com.promptmanager.app",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "npx nuxt dev",
    "beforeBuildCommand": "npm run generate"
  },
  "app": {
    "windows": [
      {
        "title": "Prompt Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
